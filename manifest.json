{
  "manifest_version": 3,
  "name": "Google Click Runner",
  "version": "2.0.0",
  "description": "Searches Google for a target site, clicks a matching result, and repeats.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
